<div class="container" style="padding-top: 60px;">
  <h1 class="page-header">Edit Profile</h1>
  <div class="row">

    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center" id="photo-container">
        <h6>Upload a different photo...</h6>
        <input id="photo-selector" name="file" type="file" class="upload_field text-center center-block well well-sm">
        <div id="progress-bar" class="progress hidden">
          <div class="progress-bar progress-bar-info" role="progressbar" aria-valuemin="0" aria-valuemax="100">
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
      <div id="save-success" class="alert alert-success text-center">
          Profile <strong>saved!</strong>.
      </div>
      <div id="profile-error" class="alert alert-danger text-center" role="alert">
      </div>
      <h3 class="p-info">Personal info</h3>
      <form class="form-horizontal">

        <div class="form-group">
          <label class="col-lg-3 control-label">First name:</label>
          <div class="col-lg-8">
            <input class="form-control" id="new-firstname" placeholder="First name" type="text" value={{firstname}}>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-3 control-label">Last name:</label>
          <div class="col-lg-8">
            <input class="form-control" id="new-lastname" placeholder="Last name" type="text" value={{lastname}}>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label">Username:</label>
          <div class="col-md-8">
            <p class="form-control-static" id="new-username">{{username}}</p>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-3 control-label">Email:</label>
          <div class="col-lg-8">
            <input class="form-control" id="new-email" placeholder="E-mail" type="text" value={{email}}>
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label">New Password:</label>
          <div class="col-md-8">
            <input class="form-control" id="new-password" placeholder="New password" type="password" value="">
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label">Confirm New Password:</label>
          <div class="col-md-8">
            <input class="form-control" id="new-password-confirm" placeholder="Repeat New Password" type="password" value="">
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label">Current Password:</label>
          <div class="col-md-8">
            <input class="form-control" id="password" placeholder="Current Password" type="password" value="">
          </div>
        </div>

        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <a id="profile-save" class="btn btn-primary">Save Changes</a>
          </div>
        </div>

      </form>

    </div>

  </div>
</div>